<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<module-name>kommonitor-data-management</module-name>

	<!-- ALLOW PUBLIC GET -->
	<security-constraint>
		<display-name>Allow unprotected GET</display-name>
		<web-resource-collection>
			<web-resource-name>get_public</web-resource-name>
			<url-pattern>/management/public/*</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
	</security-constraint>
	
	<!-- ALLOW ROLES GET -->
	<security-constraint>
		<display-name>Allow roles GET</display-name>
		<web-resource-collection>
			<web-resource-name>get_public_roles</web-resource-name>
			<url-pattern>/management/roles/*</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
	</security-constraint>
	
	<!-- PROTECTED RESOURCES GET -->
	<security-constraint>
		<display-name>Protect other GET</display-name>
		<web-resource-collection>
			<web-resource-name>get_protected_resources</web-resource-name>
			<url-pattern>/management/*</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>
	
	<!-- PROTECTED RESOURCES GET -->
	<security-constraint>
		<display-name>admin operations</display-name>
		<web-resource-collection>
			<web-resource-name>admin_operations</web-resource-name>
			<url-pattern>/management/*</url-pattern>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
			<http-method>PATCH</http-method>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>administrator</role-name>
		</auth-constraint>
	</security-constraint>
	
	<login-config>
		<auth-method>KEYCLOAK</auth-method>
		<realm-name>kommonitor</realm-name>
	</login-config>

	<security-role>
		<role-name>administrator</role-name>
	</security-role>
</web-app>